#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

#include "Inputs.h"
#include "ManejoStructs.h"

#define MAXClientes 100

int main() {
	setbuf(stdout, NULL);
	int opcionMenuPrincipal;
	eCliente listaClientes[MAXClientes];

	int retornoFuncion;
	int id;

	id = 1000;



	InicializarClientes(listaClientes, MAXClientes);

	do{
		opcionMenuPrincipal = GetInt("", 1, 11, "La opcion ingresada no existe, intente nuevamente.");
		switch (opcionMenuPrincipal){
			case 1:
				retornoFuncion = BuscarEspacioLibre(listaClientes, MAXClientes);
				if(retornoFuncion != -1){
					CargarNuevoCliente(listaClientes, MAXClientes, &id);
					retornoFuncion = MostrarClientes(listaClientes, MAXClientes);
				}
				break;
			case 2:
			case 3:
			case 4:
			case 5:
			case 6:
			case 7:
			case 8:
			case 9:
			case 10:
			case 11:
				break;
		}


	}while(opcionMenuPrincipal != 11);

	return 0;
}
